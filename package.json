{
  "name": "challenge-wheel-obs",
  "version": "1.0.0",
  "description": "Challenge Wheel Tool for OBS Streaming with Donation Tracking",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --windows",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "obs",
    "streaming",
    "challenge",
    "donation",
    "wheel"
  ],
  "author": "Challenge Wheel Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.challengewheel.obs",
    "productName": "Challenge Wheel OBS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}